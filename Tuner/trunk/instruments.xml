<TunerInstruments>
    <MiddleC>
        <!--
            Frequency of Middle C in Hz.
            
            The frequencies of all other notes are calculated relative to this.
        -->
        261.6256
    </MiddleC>
    
    <!--
        Next define all the instruments we know about.  For each one the semitone
        index (relative to middle C) is given for each string.
        
        So the low E on a guitar for example is 20 semitones below middle C.
    -->
    
    <Instrument name="Bass Guitar">
        <String name="E"><Semitone>-32</Semitone></String>
        <String name="A"><Semitone>-27</Semitone></String>
        <String name="D"><Semitone>-22</Semitone></String>
        <String name="G"><Semitone>-17</Semitone></String>
    </Instrument>

    <Instrument name="Cello">
        <String name="C"><Semitone>-24</Semitone></String>
        <String name="G"><Semitone>-17</Semitone></String>
        <String name="D"><Semitone>-10</Semitone></String>
        <String name="A"><Semitone>-3</Semitone></String>
    </Instrument>

    <Instrument name="Double Bass">
        <String name="E"><Semitone>-32</Semitone></String>
        <String name="A"><Semitone>-27</Semitone></String>
        <String name="D"><Semitone>-22</Semitone></String>
        <String name="G"><Semitone>-17</Semitone></String>
    </Instrument>

    <Instrument name="Guitar">
        <String name="E (low)"><Semitone>-20</Semitone></String>
        <String name="A"><Semitone>-15</Semitone></String>
        <String name="D"><Semitone>-10</Semitone></String>
        <String name="G"><Semitone>-5</Semitone></String>
        <String name="B"><Semitone>-1</Semitone></String>
        <String name="E (high)"><Semitone>4</Semitone></String>
    </Instrument>

    <Instrument name="Guitar (Drop D)">
        <String name="D (low)"><Semitone>-22</Semitone></String>
        <String name="A"><Semitone>-15</Semitone></String>
        <String name="D"><Semitone>-10</Semitone></String>
        <String name="G"><Semitone>-5</Semitone></String>
        <String name="B"><Semitone>-1</Semitone></String>
        <String name="E (high)"><Semitone>4</Semitone></String>
    </Instrument>
    
    <Instrument name="Ukelele">
        <String name="G"><Semitone>19</Semitone></String>
        <String name="C"><Semitone>24</Semitone></String>
        <String name="E"><Semitone>28</Semitone></String>
        <String name="A"><Semitone>33</Semitone></String>
    </Instrument>

    <Instrument name="Ukelele (Guitar tuning)">
        <String name="E"><Semitone>16</Semitone></String>
        <String name="A"><Semitone>21</Semitone></String>
        <String name="D"><Semitone>26</Semitone></String>
        <String name="G"><Semitone>31</Semitone></String>
    </Instrument>

    <Instrument name="Viola">
        <String name="C"><Semitone>-12</Semitone></String>
        <String name="G"><Semitone>-5</Semitone></String>
        <String name="D"><Semitone>2</Semitone></String>
        <String name="A"><Semitone>9</Semitone></String>
    </Instrument>
    
    <Instrument name="Violin">
        <String name="G"><Semitone>-5</Semitone></String>
        <String name="D"><Semitone>2</Semitone></String>
        <String name="A"><Semitone>9</Semitone></String>
        <String name="E"><Semitone>16</Semitone></String>
    </Instrument>
</TunerInstruments>
